@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IdentityServer.ViewModels.PasswordChangingViewModel

    <div class="container py-4">
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-lg-8 col-xl-7 col-xxl-6 text-center">
                <h2>Заміна паролю</h2>
            </div>
        </div>
        @if(Model.IsSuccessful)
        {
        <div class="row text-center d-flex justify-content-center">
            <div class="col-12 col-lg-8 col-xl-7 col-xxl-6">
                <div class="text-bg-success rounded-3 p-2">
                    <h6 class="m-0">Пароль успішно змінено</h6>
                </div>
            </div>
        </div>
        }
        <partial name="_ValidationSummary" />
        <div class="row d-flex d-lg-flex d-xl-flex justify-content-center justify-content-lg-center justify-content-xl-center">
            <div class="col-lg-8 col-xl-7 col-xxl-6">
                <div class="card">
                    <div class="card-body text-center">
                        <div class="bg-primary rounded-circle p-4 d-inline-block m-3"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="none" style="font-size: 48px;">
                                <path d="M6 12C6 12.5523 5.55228 13 5 13C4.44772 13 4 12.5523 4 12C4 11.4477 4.44772 11 5 11C5.55228 11 6 11.4477 6 12Z" fill="currentColor"></path>
                                <path d="M9 13C9.55228 13 10 12.5523 10 12C10 11.4477 9.55228 11 9 11C8.44771 11 8 11.4477 8 12C8 12.5523 8.44771 13 9 13Z" fill="currentColor"></path>
                                <path d="M14 12C14 12.5523 13.5523 13 13 13C12.4477 13 12 12.5523 12 12C12 11.4477 12.4477 11 13 11C13.5523 11 14 11.4477 14 12Z" fill="currentColor"></path>
                                <path d="M20 11H16V13H20V11Z" fill="currentColor"></path>
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M2 6C0.895431 6 0 6.89543 0 8V16C0 17.1046 0.89543 18 2 18H22C23.1046 18 24 17.1046 24 16V8C24 6.89543 23.1046 6 22 6H2ZM22 8H2L2 16H22V8Z" fill="currentColor"></path>
                            </svg></div>
                        <form asp-action="PasswordChanging" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                            @if (Model.IsPasswordSet)
                            {
                            <div class="row d-sm-flex justify-content-sm-center mb-2">
                                <div class="col-sm-9 col-md-7 col-lg-7 col-xl-6 col-xxl-6"><input class="form-control form-control" type="password" asp-for="OldPassword" placeholder="Введіть старий пароль" autofocus="" required=""></div>
                            </div>
                            }
                            <div class="row d-sm-flex justify-content-sm-center mb-2">
                                <div class="col-sm-9 col-md-7 col-lg-7 col-xl-6 col-xxl-6"><input class="form-control form-control" type="password" asp-for="Password" placeholder="Введіть новий пароль" autofocus="" required=""></div>
                            </div>
                            <div class="row d-sm-flex justify-content-sm-center mb-2">
                                <div class="col-sm-9 col-md-7 col-lg-7 col-xl-6 col-xxl-6"><input class="form-control form-control" type="password" asp-for="ConfirmPassword" placeholder="Повторіть пароль" required=""></div>
                            </div>
                            <div class="row text-center">
                                <div class="col-12"><button class="btn btn-primary" type="submit">Змінити пароль</button></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>