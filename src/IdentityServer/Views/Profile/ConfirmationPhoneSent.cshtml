@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IdentityServer.ViewModels.ConfirmPhoneViewModel

<div class="container py-4">
    <div class="row">
        <div class="col text-center">
            <h2>Підтвердження телефону</h2>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-10 col-md-8 col-lg-5">
            <partial name="_ValidationSummary"/>
            <div class="card">
                <div class="card-body text-center">
                    <div class="justify-content-center align-items-center bg-primary rounded-circle p-4 d-inline-flex m-3">
                        <i class="fas fa-sms" style="font-size: 48px;"></i>
                    </div>
                    <div class="row d-flex justify-content-center">
                        @if (Model.IsSuccessful)
                        {
                            <div class="col-sm-10">
                                <div class="card-title">
                                    <p class="text-center text-success border rounded-0 m-0">Код підтвердження надіслано на ваш телефон.</p>
                                </div>
                            </div>
                        }
                        <div class="col-12 col-xxl-12 my-2">
                            <form asp-action="ConfirmPhone">
                                <input class="form-control" type="hidden" asp-for="ReturnUrl">
                                <div class="row d-flex justify-content-center">
                                    <div class="col-8 col-xxl-6 my-2">
                                        <input class="form-control" type="text" placeholder="Код підтвердження" autofocus="" required="" asp-for="Code" minlength="6" maxlength="6">
                                    </div>
                                    <div class="col-xl-12 card-footer bg-white">
                                        <button class="btn btn-primary" type="submit">Підтвердити</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>