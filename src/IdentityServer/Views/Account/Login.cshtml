@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IdentityServer.ViewModels.LoginViewModel;
@{
    var provider = Model.ExternalProviders.FirstOrDefault();
}
    <section class="py-4 py-xl-5">
        <div class="container">
            <div class="row mb-2">
                <div class="col-md-8 col-xl-6 text-center mx-auto">
                    <h2>Вхід</h2>
                </div>
            </div>
            <partial name="_ValidationSummary" />
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 col-xl-4">
                    <div class="card mb-5">
                        <div class="card-body d-flex flex-column align-items-center">
                            <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"></path>
                                </svg></div>
                            <form class="text-center" method="post" asp-route="Login">
                                <input type="hidden" asp-for="ReturnUrl">
                                <div class="mb-3"><input class="form-control" type="email" name="email" placeholder="Пошта" required="" pattern="[a-z0-9._%+-]+&#64;[a-z0-9.-]+\.[a-z]{2,4}$" inputmode="email" autofocus="" asp-for="Email"></div>
                                <div class="mb-3"><input class="form-control" type="password" name="password" placeholder="Пароль" required="" asp-for="Password"></div>
                                <div class="form-check" style="margin: 0px 0px 5px 0px;"><input class="form-check-input" type="checkbox" id="formCheck-1" style="padding-bottom: 0px;" asp-for="RememberLogin"><label class="form-check-label" for="formCheck-1">Запам'ятати мене</label></div>
                                <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit">Увійти</button></div>
                                <p class="text-muted"><a asp-action="SendResetPassword" asp-controller="Account" asp-route-returnurl="@Model.ReturnUrl">Забули пароль?</a></p>
                            </form>
                             <p>Авторизуйтесь за допомогою</p>
                            <form asp-controller="External" asp-action="Challenge" asp-route-scheme="@provider!.AuthenticationScheme" asp-route-returnurl="@Model.ReturnUrl"><button class="btn btn-primary fab fa-google" type="submit">&nbsp;Google</button></form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>